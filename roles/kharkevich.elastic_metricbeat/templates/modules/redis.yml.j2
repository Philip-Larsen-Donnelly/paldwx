# Module: redis
# Docs: https://www.elastic.co/guide/en/beats/metricbeat/6.5/metricbeat-module-redis.html

{% if module_configuration is defined and (module_configuration | selectattr("module", "match", "redis") | list | length)  %}
{# Module custom settings #}
{{ module_configuration | selectattr("module", "match", "redis") | list | to_nice_yaml }}
{% else %}
{# Module default settings #}
- module: redis
  #metricsets:
  #  - info
  #  - keyspace
  period: 10s

  # Redis hosts
  hosts: ["127.0.0.1:6379"]

  # Network type to be used for redis connection. Default: tcp
  #network: tcp

  # Max number of concurrent connections. Default: 10
  #maxconn: 10

  # Redis AUTH password. Empty by default.
  #password: foobared
{% endif %}
